<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/dialog_pre_push_cbpushall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="set push all"/>

        <CheckBox
            android:id="@+id/dialog_pre_push_cbforcepush"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="force push"/>

    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c16b"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/dialog_pre_push_username"
            android:layout_width="match_parent"
            android:ems="10"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:hint="username"/>

        <EditText
            android:id="@+id/dialog_pre_push_password"
            android:layout_width="match_parent"
            android:ems="10"
            android:paddingTop="10dp"
            android:layout_height="wrap_content"
            android:inputType="textNoSuggestions"
            android:singleLine="true"
            android:hint="password or token"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c16b"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <ListView
        android:id="@+id/dialog_pre_push_list2"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/c16b"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/dialog_pre_push_cancel"
        android:layout_width="match_parent"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_height="wrap_content"
        android:text="cancel"/>

</LinearLayout>


